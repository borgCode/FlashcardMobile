<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
>


    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:padding="6dp"
                  android:weightSum="4"
                  android:id="@+id/column_box" app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent">
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:layout_weight="1.2"
                  android:textSize="20sp"
                  android:gravity="center"
                  android:text="Name"
                  android:id="@+id/firstCol"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:layout_weight="1.2"
                  android:gravity="center"
                  android:textSize="20sp"
                  android:text="Color"
                  android:id="@+id/secondCol"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:layout_weight="1.2"
                  android:gravity="center"
                  android:textSize="20sp"
                  android:text="Size"
                  android:id="@+id/thirdCol"/>
        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="0.4"
                  android:gravity="center"
                  android:text=""/>

    </LinearLayout>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_gravity="end" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/column_box" android:id="@+id/back_to_tags_button"
    android:visibility="gone"
    android:text="@string/back_to_all_tags"/>

    <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_above_recycler"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:barrierDirection="bottom"
            
            app:constraint_referenced_ids="back_to_tags_button,column_box"
            app:layout_constraintTop_toBottomOf="@id/column_box" />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"

            android:paddingStart="3dp"
            android:paddingTop="5dp"
            android:paddingEnd="3dp"
            android:paddingBottom="5dp"
            android:clipToPadding="false"
            android:scrollbars="vertical"
            app:layout_constraintTop_toBottomOf="@id/barrier_above_recycler"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_height="0dp" android:layout_width="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>