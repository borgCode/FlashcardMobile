<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/> <!-- Transparent background -->
            <stroke android:width="4dp" android:color="#8B5F2E"/> <!-- Darker border for shadow effect -->
        </shape>
    </item>
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                    android:startColor="#FFD1A4"
            android:endColor="#CD7F32"
            android:angle="270"/>
            <stroke android:width="2dp" android:color="#CD7F32"/> <!-- Main border color -->
            <corners android:radius="3dp"/>
        </shape>
    </item>
</layer-list>